{
  "info": {
    "name": "Insurance Backend",
    "_postman_id": "60562b30-a782-49f8-9024-a8983d9f6ce0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{API}}/api/auth/login",
          "host": [
            "{{API}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"superadmin@example.com\", \"password\": \"ChangeMe123!\"}"
        }
      }
    },
    {
      "name": "Auth - Refresh",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{API}}/api/auth/refresh",
          "host": [
            "{{API}}"
          ],
          "path": [
            "api",
            "auth",
            "refresh"
          ]
        }
      }
    },
    {
      "name": "Admin - Create Agent",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{ACCESS_TOKEN}}"
          }
        ],
        "url": {
          "raw": "{{API}}/api/admin/users",
          "host": [
            "{{API}}"
          ],
          "path": [
            "api",
            "admin",
            "users"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"role\": \"agent\", \"name\": \"Agent A\", \"email\": \"agent@example.com\", \"phone_no\": \"8888888888\"}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "API",
      "value": "http://localhost:5000"
    },
    {
      "key": "ACCESS_TOKEN",
      "value": ""
    }
  ]
}