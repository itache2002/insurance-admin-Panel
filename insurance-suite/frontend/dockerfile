# ---- Build stage ----
FROM node:20-alpine AS build
WORKDIR /app

# Install deps (great cache behavior)
COPY package*.json ./
RUN npm ci

# Copy source and build
COPY . .
# If you're using Vite, keep this command as is (it also uses "build").
# If your script name differs, adjust accordingly.
RUN npm run build

# ---- Runtime stage ----
FROM nginx:1.27-alpine AS runtime
# Clean default config
RUN rm -f /etc/nginx/conf.d/default.conf

# Add our SPA nginx config
COPY nginx.conf /etc/nginx/conf.d/app.conf

# Copy the build output
# CRA -> "build", Vite -> "dist". Change the path below to match your tool.
# If you use Vite, change /app/build to /app/dist.
COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80
HEALTHCHECK --interval=30s --timeout=5s --retries=3 CMD wget -qO- http://127.0.0.1/healthz || exit 1

# Small health endpoint for Coolify/NGINX checks
RUN printf "OK" > /usr/share/nginx/html/healthz
